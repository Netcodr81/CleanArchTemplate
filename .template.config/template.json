{
    "$schema": "http://json.schemastore.org/template",
    "author": "Mike Eckel",
    "classifications": [
        "Web",
        "Blazor",
        "MVC",
        "WebApi",
        "Clean Architecture"
    ],
    "identity": "CleanArch",
    "name": "Clean Architecture Template",
    "shortName": "cleanarch",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "CleanArchTemplate",
    "preferNameDirectory": true,
    "symbols": {
        "ClientFramework": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "WebAPI",
                    "description": "Use ASP.NET Web API"
                },
                {
                    "choice": "MVC",
                    "description": "Use ASP.NET Core MVC"
                },
                {
                    "choice": "BlazorWebApp",
                    "description": "Use Blazor Web App"
                },
                {
                    "choice": "BlazorServerApp",
                    "description": "Use Blazor Server App"
                },
                {
                    "choice": "BlazorSSRApp",
                    "description": "Use Blazor SSR App"
                },
                {
                    "choice": "BlazorWebAssemblyApp",
                    "description": "Use Blazor WebAssembly App"
                }
            ],
            "defaultValue": "WebAPI",
            "description": "The client framework to use"
        },
        "InteractiveAtRoot": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Sets the application to use global interactivity",
            "defaultValue": "false",
            "isEnabled": "(ClientFramework == \"BlazorWebApp\")"
        },
        "BlazorRenderMode": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "Server",
                    "description": "Use InteractiveServer Rendering Mode"
                },
                {
                    "choice": "WebAssembly",
                    "description": "Use InteractiveWebAssembly Rendering Mode"
                },
                {
                    "choice": "Auto",
                    "description": "Use InteractiveAuto Rendering"
                }
            ],
            "defaultValue": "Auto",
            "isEnabled": "(ClientFramework == \"BlazorWebApp\")"
        },
        "UseServer": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Server\")"
        },
        "UseAuto": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Auto\")"
        },
        "UseWebAssembly": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"WebAssembly\")"
        },
        "UseWebApi": {
            "type": "computed",
            "value": "(ClientFramework == \"WebAPI\")"
        },
        "UseMvc": {
            "type": "computed",
            "value": "(ClientFramework == \"MVC\")"
        },
        "UseBlazorWebApp": {
            "type": "computed",
            "value": "(ClientFramework == \"BlazorWebApp\")"
        },
        "UseBlazorServerApp": {
            "type": "computed",
            "value": "(ClientFramework == \"BlazorServerApp\")"
        },
        "UseBlazorWebAssemblyApp": {
            "type": "computed",
            "value": "(ClientFramework == \"BlazorWebAssemblyApp\")"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": ".template.config/**/*",
            "modifiers": [
                {
                    "condition": "(UseWebApi)",
                    "exclude": [
                        "src/CleanArchTemplate.BlazorWebApp/**/*",
                        "src/CleanArchTemplate.BlazorServer/**/*",
                        "src/CleanArchTemplate.BlazorWASM/**/*",
                        "src/CleanArchTemplate.MVC/**/*",
                        "src/CleanArchTemplate.BlazorSSR/**/*"
                    ]
                },
                {
                    "condition": "(UseMvc)",
                    "exclude": [
                        "src/CleanArchTemplate.Api/**/*",
                        "src/CleanArchTemplate.BlazorWebApp/**/*",
                        "src/CleanArchTemplate.BlazorServer/**/*",
                        "src/CleanArchTemplate.BlazorWASM/**/*",
                        "src/CleanArchTemplate.BlazorSSR/**/*"
                    ]
                },
                {
                    "condition": "(UseBlazorWebApp)",
                    "exclude": [
                        "src/CleanArchTemplate.Api/**/*",
                        "src/CleanArchTemplate.BlazorServer/**/*",
                        "src/CleanArchTemplate.BlazorWASM/**/*",
                        "src/CleanArchTemplate.MVC/**/*",
                        "src/CleanArchTemplate.BlazorSSR/**/*"
                    ]
                },
                {
                    "condition": "(UseBlazorServerApp)",
                    "exclude": [
                        "src/CleanArchTemplate.Api/**/*",
                        "src/CleanArchTemplate.BlazorWebApp/**/*",
                        "src/CleanArchTemplate.BlazorWASM/**/*",
                        "src/CleanArchTemplate.MVC/**/*",
                        "src/CleanArchTemplate.BlazorSSR/**/*"
                    ]
                },
                {
                    "condition": "(UseBlazorWebAssemblyApp)",
                    "exclude": [
                        "src/CleanArchTemplate.Api/**/*",
                        "src/CleanArchTemplate.BlazorWebApp/CleanArchTemplate.BlazorWebApp/**/*",
                        "src/CleanArchTemplate.BlazorWebApp/CleanArchTemplate.BlazorWebApp.Client/**/*",
                        "src/CleanArchTemplate.BlazorServer/**/*",
                        "src/CleanArchTemplate.MVC/**/*",
                        "src/CleanArchTemplate.BlazorSSR/**/*"
                    ]
                }
            ]
        }
    ]
}