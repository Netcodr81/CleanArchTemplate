{
    "$schema": "http://json.schemastore.org/template",
    "author": "Mike Eckel",
    "classifications": [
        "Web",
        "Blazor",
        "Clean Architecture"
    ],
    "identity": "CleanArchTemplate.BlazorWebApp",
    "groupIdentity": "CleanArchTemplate.BlazorWebApp",
    "name": "Clean Architecture Template - Blazor Web App",
    "shortName": "cleanarch-blazorwebapp",
    "description": "A template for creating a Clean Architecture solution for a Blazor Web App.",
    "defaultName": "CleanArchTemplate.BlazorWebApp",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "guids": [
        "42B0B029-6904-44DB-99CD-B9D2EE401FDB",
        "21ECA87D-DBFA-4BD2-A0CD-0FD895B78ACF",
        "C5375CBC-56CF-4A8F-9467-3D84D4AFA57A",
        "49501BF0-53B9-4B30-9047-D32D9CFB02CB",
        "65128C0D-2FC3-4899-A1CA-081F92A1EA4B"
    ],
    "sourceName": "CleanArchTemplate.BlazorWebApp",
    "preferNameDirectory": true,
    "symbols": {
        "InteractivityLocation": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "PerPage/Component",
                    "description": "PerPage/Component"
                },
                {
                    "choice": "Global",
                    "description": "Global"
                }
            ],
            "description": "Sets the application to use global interactivity",
            "defaultValue": "PerPage/Component",
            "isEnabled": "true"
        },
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8"
                }
            ],
            "defaultValue": "net8.0",
            "replaces": "{{dotnetFrameworkVersion}}"
        },
        "CreateSolutionDirectory": {
            "type": "parameter",
            "description": "Create a directory for the solution.",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "Authorization": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "None",
                    "description": "None"
                },
                {
                    "choice": "Individual Accounts",
                    "description": "Individual Accounts"
                }
            ],
            "defaultValue": "None",
            "isEnabled": "true"
        },
        "BlazorRenderMode": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "Server",
                    "description": "Use InteractiveServer Rendering Mode"
                },
                {
                    "choice": "WebAssembly",
                    "description": "Use InteractiveWebAssembly Rendering Mode"
                },
                {
                    "choice": "Auto",
                    "description": "Use InteractiveAuto Rendering"
                },
                {
                    "choice": "None",
                    "description": "None"
                }
            ],
            "defaultValue": "Auto",
            "isEnabled": "true"
        },
        "UseServer": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Server\")"
        },
        "UseAuto": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Auto\")"
        },
        "UseWebAssembly": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"WebAssembly\")"
        },
        "UseNone": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"None\")"
        },
        "UseGlobalInteractivity": {
            "type": "computed",
            "value": "(InteractivityLocation == \"Global\")"
        },
        "UseAuthorization": {
            "type": "computed",
            "value": "(Authorization != \"None\")"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "modifiers": [
                {
                    "exclude": [
                        ".template.config/**/*",
                        ".vs/**",
                        ".cr/**",
                        ".github/**",
                        ".gitignore",
                        ".git/**"
                    ],
                    "include": [
                        "../src/CleanArchTemplate.BlazorWebApp/**/*",
                        "../src/Application/**/*",
                        "../src/Domain/**/*",
                        "../src/Infrastructure/**/*",
                        "../Clean Architecture Guides/**/*",
                        "../Tests/**/*"
                    ]
                },
                {
                    "condition": "UseServer",
                    "exclude": [
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp.Client/**/*"
                    ]
                },
                {
                    "condition": "!UseAuthorization",
                    "exclude": [
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp/Data/**/*",
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp/Components/Account/**/*"
                    ]
                },
                {
                    "condition": "UseNone",
                    "exclude": [
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp.Client/**/*",
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp/**/*"
                    ]
                },               
                {
                    "condition": "UseGlobalInteractivity",
                    "exclude": [
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp.Client/Shared/PerPage/**/*"
                    ]
                },
                {
                    "condition": "UseNone",
                    "exclude": [
                        "../src/Presentation/CleanArchTemplate.BlazorWebApp/Components/Account/PersistingRevalidatingAuthenticationStateProvider.cs"
                    ]
                }
            ]
        }
    ]
}