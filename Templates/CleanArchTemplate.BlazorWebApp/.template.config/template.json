{
    "$schema": "http://json.schemastore.org/template",
    "author": "Mike Eckel",
    "classifications": [
        "Web",
        "Blazor",
        "Clean Architecture"
    ],
    "identity": "CleanArchTemplate.BlazorWebApp.CSharp",
    "name": "Clean Architecture Template - Blazor Web App",
    "shortName": "cleanarch-blazorwebapp",
    "description": "A template for creating a Clean Architecture solution for a Blazor Web App.",
    "defaultName": "CleanArchTemplateBlazorWebApp",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "guids": [
        "CB38F49B-9A25-4897-BCB6-6AF4E40D4096",
        "3AABABC0-1525-4191-B24E-284C1D9C9166",
        "57014501-EC2B-43E6-A685-A24F92E7E9FB",
        "D24745A0-3161-4B10-B19F-7DBC0B9E5C7C",
        "324067A4-7898-4A20-A8DE-FC6E763881E2",
        "81459D3A-7131-4690-AA00-9A2133EC3FC7",
        "80D1407D-7D38-4369-B0CF-EFC87DBEEB88"
    ],
    "sourceName": "CleanArchTemplate.BlazorWebApp",
    "preferNameDirectory": true,
    "symbols": {
        "InteractivityLocation": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "PerPage/Component",
                    "description": "PerPage/Component"
                },
                {
                    "choice": "Global",
                    "description": "Global"
                }
            ],
            "description": "Sets the application to use global interactivity",
            "defaultValue": "PerPage/Component",
            "isEnabled": "true"
        },
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net8.0",
                    "description": "Target .NET 8"
                }
            ],
            "defaultValue": "net8.0",
            "replaces": "{{dotnetFrameworkVersion}}"
        },
        "CreateSolutionDirectory": {
            "type": "parameter",
            "description": "Create a directory for the solution.",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "Authorization": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "None",
                    "description": "None"
                },
                {
                    "choice": "Individual Accounts",
                    "description": "Individual Accounts"
                }
            ],
            "defaultValue": "None",
            "isEnabled": "true"
        },
        "BlazorRenderMode": {
            "type": "parameter",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "Server",
                    "description": "Use InteractiveServer Rendering Mode"
                },
                {
                    "choice": "WebAssembly",
                    "description": "Use InteractiveWebAssembly Rendering Mode"
                },
                {
                    "choice": "Auto",
                    "description": "Use InteractiveAuto Rendering"
                },
                {
                    "choice": "None",
                    "description": "None"
                }
            ],
            "defaultValue": "Auto",
            "isEnabled": "true"
        },
        "UseServer": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Server\")"
        },
        "UseAuto": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"Auto\")"
        },
        "UseWebAssembly": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"WebAssembly\")"
        },
        "UseNone": {
            "type": "computed",
            "value": "(BlazorRenderMode == \"None\")"
        },
        "UseGlobalInteractivity": {
            "type": "computed",
            "value": "(InteractivityLocation == \"Global\")"
        },
        "UseAuthorization": {
            "type": "computed",
            "value": "(Authorization != \"None\")"
        }
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "modifiers": [
                {
                    "exclude": [
                        ".template.config/**/*",
                        ".vs/**",
                        ".cr/**",
                        ".github/**",
                        ".gitignore",
                        ".git/**"
                    ]
                },
                {
                    "condition": "UseServer",
                    "exclude": [
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web.Client/**/*"
                    ]
                },
                {
                    "condition": "!UseAuthorization",
                    "exclude": [
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web/Data/**/*",
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web/Components/Account/**/*"
                    ]
                },
                {
                    "condition": "UseNone",
                    "exclude": [
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web.Client/**/*"
                    ]
                },
                {
                    "condition": "UseGlobalInteractivity",
                    "exclude": [
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web.Client/Shared/PerPage/**/*"
                    ]
                },
                {
                    "condition": "UseNone",
                    "exclude": [
                        "src/Presentation/CleanArchTemplate.BlazorWebApp.Web/Components/Account/PersistingRevalidatingAuthenticationStateProvider.cs"
                    ]
                }
            ]
        }
    ]
}